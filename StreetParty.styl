/* CSS declarations go here */
normalize-css()

// Common Transition
trans($sec = 0.3s)
    transition: all $sec ease
// Grid
$xsmall = 340px
$small = 500px
$med = 700px
$large = 960px
$wide = 1200px

// Colors -- Awaiting moderation and cleanup
black = #222
grey = #D8D8D8
light-grey = #EEE
purp = #524763
dark-purp = #373142
red = #E54B4B
teal = #82D8D8
dark-teal = #66A6A6
green = #CBE56C
blue = #16528E
bright-blue = #0082C8
maroon = #6A2140
light-red = #CA5765
pink = #CF256D

// Defined by us
orange = #FF9603
burnt = #FE7429
button-blue = #088FD9
text-blue = #283342

// Font Variables
quicksand = 'Quicksand', sans-serif
roboto = 'Roboto', sans-serif

z = {
    neg: -7,
    lowest: 1,
    low: 4,
    mid: 5,
    video: 6,
    header: 7,
    nav: 8,
    mini: 9,
    modal: 10,
    highest: 11
}

social = {
    twitter: #00aced,
    facebook: #3b5998,
    google: #dd4b39,
    youtube: #bb0000
}

$side-nav = 100px

html
    box-sizing: border-box

*, *:before, *:after
    box-sizing: inherit

body
    font-size 16px
    background light-grey
    padding: 70px 0 150px
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale

header
    color #FFF
    background: text-blue
    padding 20px
    fixed top left
    width 100%
    z-index: z.header
    clearfix()
    h1
        margin 0
        font-size 2em
        float left
        font-family quicksand
        font-weight 500
        span
            font-weight 700
        a
            color #FFF
    .login-buttons-dropdown-align-
        float right
        a
            color rgba(255,255,255,0.6);
            text-decoration none
            font-size 18px

p
    color #333

.page-title
    text-transform uppercase
    text-align center
    margin-bottom 30px

.main-layout
    lost-center 90%
    margin-top 20px
    +above($med)
        lost-center 90%
        padding-left $side-nav
    +above($large)
        margin-top 40px

.new-party
    margin-bottom 20px

.new-party-container
    position relative
    background #FFF
    padding 20px
    margin-bottom 20px
    .fa-close
        position absolute
        top 0
        right 0
        padding 20px
    label
        display block
        margin-bottom 10px
    textarea, input
        width 100%

.btn, button
    display inline-block
    cursor pointer
    background button-blue
    color #FFF
    text-decoration none
    padding 12px 20px
    border none
    border-radius 8px
    font-size 18px
    font-weight 700
    trans()
    &:hover
        background @background - 20
        border-color @background
    &.btn-primary
        background teal
        border-color teal
        color dark-purp
        &:hover
            background @background - 40
            border-color @background
    &.btn-deny
        background red
        border solid 3px @background
        &:hover
            background @background - 20
            border-color @background
    &.btn-text
        color purp
        background transparent
        border solid 2px purp
        &:hover
            background teal
            border-color @background
    &.btn-text-dark
        color #FFF
        background transparent
        border solid 2px #FFF
        &:hover
            background #FFF
            color dark-purp
            border-color @background
    &.btn-confirmation
        color black
        background green
        border solid 2px @background
        &:hover
            background @background - 20
            border-color dark-purp
    &.btn-cancel
        color #FFF
        background transparent
        border solid 2px #FFF
        opacity 0.4
        &:hover
            background red
            color #FFF
            opacity 1
            border-color @background

input, select, textarea
    color purp
    background #FFF
    border solid 1px light-grey
    border-radius 8px
    font-weight 400
    width 100%
    padding 13px 24px
    margin-bottom 10px
    &.static-input
        border none
        background transparent

.list-group
    list-style none
    padding 0

.panel-body
    .form-group
        lost-column 1/2

.autoform-remove-item.btn
    background light-grey
    box-shadow none
    border none
    border-radius 50%
    font-size 1em
    height: 25px
    width: 25px
    text-align: center
    display: block
    padding: 0

.autoform-add-item.btn
    width 100%
    border-radius 0
    border none
    box-shadow none
    background light-grey


.autoform-remove-item-wrap
    vertical-align middle

.side-nav
    fixed bottom left
    height 100px
    width 100%
    overflow hidden
    background orange
    color #FFF
    z-index: z.header
    ul
        margin 0
        padding 0
        display flex
        justify-content space-between
        list-style none
    a
        color #FFF
        text-decoration none
        padding 20px 20px
        display block
        text-align center
        trans()
        &:hover, &.active
            background burnt
    i
        display block
        font-size 2.8em
        margin-bottom 10px
    +above($med)
        height 100%
        z-index: z.mid
        top 80px
        fixed left
        width $side-nav
        ul
            display block
        a
            padding 20px 10px
    +above($large)
        a
            padding 20px 20px

.party
    background #FFF
    padding 0 20px 20px
    margin-bottom 20px
    position relative
    z-index 1
    border 1px solid light-grey
    border-radius 8px
    trans()
    .btn-primary, .btn-deny
        display block
    &.in-menu
        background teal
        color #FFF
        h3
            border-bottom: rgba(255,255,255, 0.6) solid 3px
    h3
        font-size: 3em;
        opacity: 0.3;
        border-bottom: rgba(0,0,0, 0.3) solid 3px
        margin-top 0
        margin-bottom 10px
    button
        margin-top 20px
    .fa-trash
        opacity 0.3
        cursor pointer
        position absolute
        top 0
        right 0
        font-size 1.6em
        display block
        padding 20px
        color black
        trans()
        &:hover
            color red
            opacity 0.6
    .ingredient
        display inline-block
        margin-right 10px
        font-size 1.2em

@keyframes card
    0%
        transform translate3d(0, 0, 0)
    50%
        transform translate3d(0, -135px, 0)
    51%
        z-index 10
        transform translate3d(0, -135px, 0)
    100%
        z-index 10
        transform translate3d(0, 0, 0)


.menu-item
    @extend .party

.shopping-list
    @extend .party
    padding 50px 5%
    list-style none
    li
        font-size 2em
        padding 20px
        border-bottom 1px solid light-grey
        border-top 1px solid light-grey
        & + li
            border-top none

.login-buttons-dropdown-align-
    #login-dropdown-list
        right 0
        left auto
        a
            color dark-purp

.home-container
    width 800px
    margin 0 auto
    background-color #fff
    border-radius 8px
    padding 40px 80px
    margin-top 60px
    h2
        font-family quicksand
        font-size 40px
        font-weight 500
        text-align center
        margin 0
        padding 0 0 30px 0
    .search-party
        margin-bottom 40px
        input
            width 80%
            margin-right 12px
        button
            padding 12px 25px
